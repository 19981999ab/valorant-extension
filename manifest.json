{
    "manifest_version": 3,
    "name": "Valorant Matches Tracker",
    "version": "1.0",
    "description": "Track live, upcoming, and past Valorant esports matches",
    "permissions": [
        "alarms",
        "notifications",
        "storage",
        "activeTab"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "128": "icon128.png"
        }
    },
    "icons": {
        "128": "icon128.png"
    },
    "web_accessible_resources": [{
        "resources": ["team_logos.json", "tournament_icons.json"],
        "matches": ["<all_urls>"]
    }],
    "background": {
        "service_worker": "background.js"
    }
}